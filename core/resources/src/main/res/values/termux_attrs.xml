<resources>
  <attr format="reference" name="termuxActivityDrawerBackground" />
  <attr format="reference" name="termuxFragmentViewBackground" />
  <attr format="reference" name="termuxActivityDrawerImageTint" />
  <attr format="reference" name="extraKeysButtonTextColor" />
  <attr format="reference" name="extraKeysButtonActiveTextColor" />
  <attr format="reference" name="extraKeysButtonBackgroundColor" />
  <attr format="reference" name="extraKeysButtonActiveBackgroundColor" />
  
  <attr name="terminalTextColor" format="color" />
    <attr name="terminalBackgroundColor" format="color" />

    <!-- 终端视图相关属性 -->
    <declare-styleable name="TerminalView">
        <attr name="terminalFontSize" format="integer" />
        <attr name="terminalColorScheme" format="reference" />
        <attr name="terminalScrollbarThumb" format="reference" />
        <attr name="terminalScrollbarTrack" format="reference" />
        <attr name="terminalCursorStyle" format="integer">
            <enum name="block" value="0" />
            <enum name="underline" value="1" />
            <enum name="verticalBar" value="2" />
        </attr>
        <attr name="terminalWrapText" format="boolean" />
        <attr name="terminalHapticFeedback" format="boolean" />
        <attr name="terminalCustomFontPath" format="string" />
    </declare-styleable>

    <!-- 终端标签页属性 -->
    <declare-styleable name="TerminalTab">
        <attr name="tabActiveBackground" format="reference|color" />
        <attr name="tabInactiveBackground" format="reference|color" />
        <attr name="tabTextColorActive" format="color" />
        <attr name="tabTextColorInactive" format="color" />
        <attr name="tabCloseButtonVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>
  
</resources>